<div class="container-fluid ">


    <form method="post" id="searchForm1">
        <!-- Button trigger modal -->
        <div class="d-flex justify-content-between fixed-top mt-5 bg-white">
            <button type="button" class="btn  btn-outline-secondary d-md-none" data-bs-toggle="modal"
                data-bs-target="#staticBackdrop">
                BRANDS
            </button>

            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">BRANDS</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input class="form-check-input ms-2 filter" type="checkbox" id="SbrandName1"
                                name="SbrandName1" value="" hidden checked>

                            {{!-- <p class="fs-6">BRANDS</p> --}}
                            {{#each response}}
                            <div class="form-check ms-2">
                                <input class="form-check-input " type="checkbox" id="SbrandName1" name="SbrandName1"
                                    value="{{this._id.brandName}}">
                                <p>
                                    <label class="form-check-label ms-4 " for="flexCheckChecked">
                                        {{this._id.brandName}}
                                    </label>
                                </p>
                            </div>
                            {{!-- -----checkbox---- --}}
                            {{/each}}
                            <br>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>



            <button type="button" class="btn  btn-outline-secondary d-md-none" data-bs-toggle="modal"
                data-bs-target="#Sprice1">
                Price
            </button>

            <!-- Modal -->
            <div class="modal fade" id="Sprice1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Filter Price</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" hidden checked
                                    value="50000">

                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="200">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.200
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="400">
                                <label class="form-check-label" for="exampleRadios2">
                                    Under Rs.400
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="600">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.600
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="700">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.700
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="1000">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.1000
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="1500">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.1500
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="Sprice" name="Sprice1" value="2500">
                                <label class="form-check-label" for="exampleRadios1">
                                    Under Rs.2500
                                </label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <select class="form-select float-end filter d-md-none" aria-label="Default select example"
                style="width: 20%;" name="sort1" id="SsortMenu1">
                <option selected>Sort</option>
                <option value="rating">Customer Rating</option>
                <option value="hl">Price : High To Low</option>
                <option value="lh">Price : Low To High</option>
            </select>
        </div>
    </form>


    <form method="post" id="searchForm">
        <div class="">
            <div class="row">
                <div class="float-end d-none d-md-block">
                    <select class="form-select float-end filter" aria-label="Default select example" style="width: 20%;"
                        name="sort" id="SsortMenu">
                        <option selected>Sort</option>
                        <option value="rating">Customer Rating</option>
                        <option value="hl">Price : High To Low</option>
                        <option value="lh">Price : Low To High</option>
                    </select>
                </div>
            </div>





            <div class="row">


                <div class="  col-2 d-none d-md-block">
                    <input class="form-check-input ms-2 filter" type="checkbox" id="flexCheckChecked" name="SbrandName"
                        value="" hidden checked>

                    <p class="fs-6">BRANDS</p>
                    {{#each response}}
                    <div class="form-check ms-2">
                        <input class="form-check-input " type="checkbox" id="brands" name="SbrandName"
                            value="{{this._id.brandName}}">
                        <p>
                            <label class="form-check-label ms-4 " for="flexCheckChecked">
                                {{this._id.brandName}}
                            </label>
                        </p>
                    </div>
                    {{!-- -----checkbox---- --}}
                    {{/each}}
                    <br>


                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" hidden checked
                            value="50000">

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="200">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.200
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="400">
                        <label class="form-check-label" for="exampleRadios2">
                            Under Rs.400
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="600">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.600
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="700">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.700
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="1000">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.1000
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="1500">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.1500
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="price" name="price" value="2500">
                        <label class="form-check-label" for="exampleRadios1">
                            Under Rs.2500
                        </label>
                    </div>
                </div>

                <div class="col-12 col-md-10  mt-5 ">
                    <div id="products">
                        <div class="row property__gallery"
                            style=" display: flex; padding: 20px;overflow-x: scroll;overflow-y: hidden;">
                            {{#each products}}
                            <div class=" col-6  col-sm-4 col-md-3 col-lg-2  ">
                                <div class="product-grid   ">
                                    <div class="product-image men"
                                        style="width: 100%;overflow: hidden;white-space: nowrap;">
                                        <a href="/product/details/{{this.products._id}}" class="image ">
                                            <img src="/product-images/{{this.products._id}}(1).jpg"
                                                class="rounded-lg mt-3">
                                        </a>
                                        <ul class="product-links">
                                            {{!-- <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li> --}}
                                            {{!-- <li> <input type="button"><i class="fa fa-heart"></i></a></li> --}}
                                            <li> <button onclick="addToWishlist('{{this.products._id}}')"
                                                    class="btn mt-3">
                                                    {{!-- <i class="fa fa-heart"></i> --}}
                                                    <i class="bi bi-heart"></i>
                                                </button></li>

                                            {{!-- <li><a href="#"><i class="fa fa-random"></i></a></li> --}}
                                        </ul>
                                    </div>
                                    <div class=" " style="width: 100%;overflow: hidden;white-space: nowrap;">
                                        <h6 class=" mt-1  fs-6 fw-bold p-0"><a class="text-dark "
                                                href="#">{{this.products.brandName}}</a></h6>
                                        <div>
                                            <p class="p-0 m-0">

                                                <a class="text-dark m-0 " style="overflow-x: hidden ;"
                                                    href="#">{{this.products.title}}</a>
                                            </p>

                                        </div>
                                        <div class="d-flex" style="overflow-x: hidden ;">
                                            {{!-- <div class="price fw-bold opacity-75"></div> --}}
                                            <p class="price  opacity-75">Rs.{{this.products.discountPrice}}</p>

                                            {{#if this.products.discount}}
                                            &nbsp <p><s> Rs.{{this.products.price}}</s></p>&nbsp
                                            <p class="text-success ">({{this.products.discount}}%OFF)</p>
                                            {{/if}}
                                        </div>


                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</form>
</div>